  ///////////// Calculate and Show Route /////////////////
  function calcRoute() {
      var start = new google.maps.LatLng(dayLocations[0][0], dayLocations[0][1]);
      var end = new google.maps.LatLng(dayLocations[dayLocations.length - 1][0], dayLocations[dayLocations.length - 1][1]);
      var waypts = [];

      for (var i = 1; i < dayLocations.length - 1; i++) {
          waypts.push({
              location: new google.maps.LatLng(dayLocations[i][0], dayLocations[i][1]),
              stopover: true
          });
      }

      var request = {
          origin: start,
          destination: end,
          waypoints: waypts,
          optimizeWaypoints: false,
          travelMode: google.maps.TravelMode.WALKING
      };
      directionsService.route(request, function (response, status) {
          if (status == google.maps.DirectionsStatus.OK) {
              directionsDisplay.setDirections(response);
              var route = response.routes[0];
              routeVisible = true; 
          }
      });
  }

